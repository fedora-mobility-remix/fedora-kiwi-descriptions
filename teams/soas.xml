<image>
	<profiles>
		<profile name="SoaS-Live" description="Sugar on a Stick Live DVD">
			<requires profile="SoaS-Desktop"/>
			<requires profile="LiveInstall"/>
		</profile>
		<profile name="SoaS-Disk" description="Sugar on a Stick Install Disk">
			<requires profile="SoaS-Desktop"/>
